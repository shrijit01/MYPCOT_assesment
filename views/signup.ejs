    <link rel="stylesheet" href="/stylesheet/createRecord.css">

    <div class="container">
        <h1>Signup here </h1>
        <form action="/users/create" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" placeholder="Enter name" required>
            </div>
            <div class="form-group">
                <label for="email">Email address:</label>
                <input type="email" id="email" name="email" placeholder="Enter Email" required>
            </div>
            <div class="form-group">
                <label for="password">password:</label>
                <input type="password" id="password" name="password" placeholder="Enter password" required>
            </div>
            <div class="form-group toggle-group">
                <label class="toggle-label">Male:</label>
                <input type="radio" id="male" name="gender" value="male" class="toggle-input" required>
            </div>
            <div class="form-group toggle-group">
                <label class="toggle-label">Female:</label>
                <input type="radio" id="female" name="gender" value="female" class="toggle-input" required>
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
